{
  "name": "@sanity/personalization-plugin",
  "version": "2.0.0",
  "description": "Plugin to help with personalization, a/b testing when using Sanity",
  "keywords": [
    "sanity",
    "sanity-plugin"
  ],
  "homepage": "https://github.com/sanity-io/sanity-plugin-personalization#readme",
  "bugs": {
    "url": "https://github.com/sanity-io/sanity-plugin-personalization/issues"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:sanity-io/sanity-plugin-personalization.git"
  },
  "license": "MIT",
  "author": "Sanity <hello@sanity.io>",
  "sideEffects": false,
  "type": "commonjs",
  "exports": {
    ".": {
      "source": "./src/index.ts",
      "import": "./dist/index.mjs",
      "default": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "sanity.json",
    "src",
    "v2-incompatible.js"
  ],
  "scripts": {
    "build": "plugin-kit verify-package --silent && pkg-utils build --strict --check --clean",
    "format": "prettier --write --cache --ignore-unknown .",
    "link-watch": "plugin-kit link-watch",
    "lint": "eslint . --fix",
    "prepublishOnly": "npm run build",
    "watch": "pkg-utils watch --strict",
    "prepare": "husky"
  },
  "dependencies": {
    "@sanity/incompatible-plugin": "^1.0.4",
    "@sanity/ui": "^2.8.19",
    "@sanity/uuid": "^3.0.2",
    "fast-deep-equal": "^3.1.3",
    "react-icons": "^5.4.0",
    "suspend-react": "^0.1.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.7.1",
    "@commitlint/config-conventional": "^19.7.1",
    "@sanity/pkg-utils": "^6.13.4",
    "@sanity/plugin-kit": "^4.0.19",
    "@sanity/semantic-release-preset": "^5.0.0",
    "@types/react": "^18.3.18",
    "@typescript-eslint/eslint-plugin": "^8.23.0",
    "@typescript-eslint/parser": "^8.23.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-sanity": "^7.1.4",
    "eslint-plugin-prettier": "^5.2.3",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-react-hooks": "^5.1.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.10",
    "prettier": "^3.4.2",
    "prettier-plugin-packagejson": "^2.5.8",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "sanity": "^3.74.1",
    "semantic-release": "^24.2.1",
    "styled-components": "^6.1.15",
    "typescript": "^5.7.3"
  },
  "peerDependencies": {
    "react": "^18",
    "sanity": "^3"
  },
  "engines": {
    "node": ">=18"
  },
  "resolutions": {
    "conventional-changelog-conventionalcommits": ">= 8.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
